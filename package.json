{
  "name": "solid-site",
  "scripts": {
    "build": "run-s type:check clean rollup",
    "clean": "rimraf dist",
    "nollup": "cross-env NODE_ENV=development nollup -c --hot --content-base public --history-api-fallback",
    "rollup": "cross-env NODE_ENV=production rollup -c",
    "serve": "sirv dist",
    "start": "run-p nollup type:watch",
    "type:check": "tsc --noEmit",
    "type:watch": "tsc --noEmit --watch",
    "format": "prettier -w \"src/**/*.{js,ts,json,css,tsx,jsx}\""
  },
  "dependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "commonmark": "^0.29.3",
    "prismjs": "^1.22.0",
    "scroll-js": "^3.3.0",
    "solid-app-router": "^0.0.18",
    "solid-js": "^0.23.4",
    "solid-repl": "^0.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-url": "^6.0.0",
    "@tailwindcss/typography": "^0.3.1",
    "@types/prismjs": "^1.16.2",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "autoprefixer": "^10.1.0",
    "babel-eslint": "^10.1.0",
    "babel-preset-solid": "^0.23.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-local": "^1.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "nollup": "^0.14.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.1",
    "postcss-font-base64": "^1.0.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-hot-css": "0.4.0",
    "rollup-plugin-static-files": "0.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.10",
    "tailwindcss": "^2.0.2",
    "typescript": "^4.1.3"
  }
}

{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "newLine": "lf",
    "sourceMap": true,
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "include": ["./src", "vite.config.js"],
  "exclude": ["node_modules/", "Markdown.tsx"]
}
